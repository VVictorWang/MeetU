<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TabSelected"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/iconwarning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:id="@+id/alert_dialog_text"
            android:text="真的要取消吗？"
            android:textColor="@color/FontColorDefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alert_dialog_negative"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/button_middle_b"
                android:text="点错了"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/alert_dialog_positive"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/button_middle_b"
                android:text="是的"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>