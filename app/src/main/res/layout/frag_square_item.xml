<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/item_CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/message_boy"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/message">

                <ImageView
                    android:id="@+id/item_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icont1"/>


                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/item_avatar"
                    android:text="^-^求共伞"
                    android:textColor="@color/FontColorDefault"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/item_location_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/item_title"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_avatar"
                    android:src="@drawable/iconplace24"/>

                <TextView
                    android:id="@+id/item_location"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/item_location_icon"
                    android:text="东九楼"
                    android:textColor="@color/FontColorDefault"
                    android:textSize="12sp"/>


                <ImageView
                    android:id="@+id/item_time_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/item_title"
                    android:layout_gravity="center"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_location_icon"
                    android:src="@drawable/icontime24"/>

                <TextView
                    android:id="@+id/item_remain_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/item_time_icon"
                    android:text="8分钟"
                    android:textColor="@color/FontColorDefault"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="12dp"
                    android:text="8分钟前"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>



            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>